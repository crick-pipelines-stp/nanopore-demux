nextflow_process {

    name "Test Module DORADO_DEMUX"
    script "../main.nf"
    process "DORADO_DEMUX"

    tag "modules"
    tag "ont"
    tag "ont_dorado"
    tag "ont_dorado/demux"

    test("fastq") {
        tag "ont_dorado/demux/fastq"

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test' ],
                    file('$baseDir/' + params.test_data_dir + '/ont/seq_runs/multiplexed/1000_reads_6_samples.bam', checkIfExists: true)
                ])
                input[1] = false
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match()}
            )
        }
    }

    test("bam") {
        tag "ont_dorado/demux/bam"

        when {
            process {
                """
                input[0] = Channel.of([
                    [ id:'test' ],
                    file('$baseDir/' + params.test_data_dir + '/ont/seq_runs/multiplexed/1000_reads_6_samples.bam', checkIfExists: true)
                ])
                input[1] = true
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out).match()}
            )
        }
    }

}
